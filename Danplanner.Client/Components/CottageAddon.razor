@rendermode InteractiveServer
@using System.Runtime.CompilerServices
@using Danplanner.Shared.Models
@inject IAddonService AddonService

<h3 class="d-flex justify-content-center"><strong>V&#230;lg tilk&#248;b til din hytte</strong></h3>

<EditForm Model="_dto" OnValidSubmit="ConfirmAddons">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="list-group" style="transform: translateX(50%); max-width: 50%">
        @foreach (var option in AddonOptions)
        {
            <label class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <InputCheckbox @bind-Value="option.IsSelected" class="form-check-input me-2" />
                    <span>@option.Name</span>
                </div>
                <span class="badge bg-primary rounded-pill">@string.Format("{0:#,##}", option.Price) kr.</span>
            </label>
        }
    </div>

<button type="submit" class="btn btn-success mt-4" style="transform: translateX(750px)" @onclick="AddonCottageChanged">Tilf&#248;j tilk&#248;b</button>

</EditForm>

@if (_confirmed)
{
    <div class="alert alert-success mt-4" style="transform: translateX(50%); max-width: 50%">
        <h5>Tilk&#248;b bekr&#230;ftet</h5>
        <p>
            Valgte tilk&#248;b: @string.Join(", ", AddonOptions.Where(a => a.IsSelected).Select(a => a.Name)) <br />
            Ekstra pris: <strong>@string.Format("{0:#,##}", _dto.Price) kr.</strong>
        </p>
    </div>
}

@code {
    private AddonDto _dto = new();
    private bool _confirmed = false;
    private List<AddonDto> AddonOptions { get; set; } = new();
    private List<BookingAddonDto> bookingAddons = new();

    private void ConfirmAddons()
    {
        _dto.SelectedAddons = AddonOptions
            .Where(a => a.IsSelected)
            .Select(a => a.Name)
            .ToList();

        _dto.Price = AddonOptions
            .Where(a => a.IsSelected)
            .Sum(a => a.Price);

        _confirmed = true;

        var selectedAddons = AddonOptions.Where(a => a.IsSelected).ToList();
        foreach (var selected in selectedAddons)
        {
            bookingAddons.Add(
                new BookingAddonDto
                {
                    AddonId = selected.Id,
                    Quantity = 1,
                    Price = selected.Price,
                }
            );
        }
    }

    [Parameter]
    public EventCallback<List<BookingAddonDto>?> AddonCottageCallback { get; set; }
    private async Task AddonCottageChanged(MouseEventArgs e)
    {
        await AddonCottageCallback.InvokeAsync(bookingAddons);
    }

    protected override async Task OnInitializedAsync()
    {
        AddonOptions = await AddonService.GetAllAsync();
    }
}
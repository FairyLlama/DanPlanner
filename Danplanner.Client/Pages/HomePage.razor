@page "/"

<!-- Fullscreen hero banner med vignette -->
<div class="hero-banner d-flex flex-column align-items-center justify-content-center text-white text-center"
     style="background: url('') center/cover no-repeat; min-height: 100vh; position: relative;">

    <!-- Vignette overlay -->
    <div style="position:absolute; inset:0; background: radial-gradient(circle, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.8) 100%);"></div>

    <!-- Content ovenpå -->
    <div style="position:relative; z-index:1;" class="container">
        <h1 class="fw-bold mb-3">Velkommen til Danplanner</h1>
        <p class="lead mb-4">Din digitale løsning til camping livsstilen!</p>

        <!-- Primære call-to-actions -->
        <div class="d-flex justify-content-center gap-3 mt-3">
            <a href="/register" class="btn btn-outline-light shadow px-4">Opret bruger</a>
            <a href="/login" class="btn btn-outline-light shadow px-4">Log ind</a>
        </div>
    </div>
</div>

<!-- Feature cards (runde kasser) -->
<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 feature-card h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-between">
                    <h4 class="card-title">🏕 Booking & produkter</h4>
                    <a href="/booking" class="btn btn-outline-primary px-3 mt-3 w-75">Gå til booking</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 feature-card h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-between">
                    <h4 class="card-title">📋 Administrer</h4>
                    <a href="/reservations" class="btn btn-outline-secondary px-3 mt-3 w-75">Se dine reservationer</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 feature-card h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-between">
                    <h4 class="card-title">ℹ️ Praktiske oplysninger</h4>
                    <div class="d-flex justify-content-center gap-2 mt-3 w-100">
                        <a href="/camping" class="btn btn-outline-success px-2 py-1 flex-fill">Kontakt & info</a>
                        <a href="/campingmap" class="btn btn-outline-success px-2 py-1 flex-fill">Campingpladsen</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Custom CSS -->
<style>
    /* Hover-effekt på feature cards */
    .feature-card {
        transition: all 0.3s ease-in-out;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 1.5rem rgba(0,0,0,0.2);
        }

    /* Hover-effekt på små knapper */
    .hover-btn {
        transition: all 0.2s ease-in-out;
    }

        .hover-btn:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }
</style>
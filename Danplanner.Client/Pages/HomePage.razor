@page "/"

@rendermode InteractiveServer

<!-- Fullscreen hero banner med vignette -->
<div class="hero-banner d-flex flex-column align-items-center justify-content-center text-white text-center"
     style="background: url(@(imgs[ImgIndex])) center/cover no-repeat; min-height: 62vh; position: relative;">

    <!-- Vignette overlay -->
    <div style="position:absolute; inset:0; background: radial-gradient(circle, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 400%);"></div>

    <!-- Content ovenpå -->
    <div style="position:relative; z-index:1; margin-bottom: 8vh" class="container">
        <h1 class="fw-bold mb-3"> <strong>Velkommen til Danplanner</strong></h1>
        <h3 class="fw-bold mb-3"><strong></strong>Din campingoplevelse i centrum</h3>

        <!-- Primære call-to-actions -->

    </div>

    <button @onclick="ImgDecrement" class="btn btn-transparent imgbtn left-align">@("<")</button>
    <button @onclick="ImgIncrement"class="btn btn-transparent imgbtn right-align">@(">")</button>
</div>

<!-- Feature cards (runde kasser) -->
<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 h-100">
                <div class="card-body text-center flex-column align-items-center justify-content-between">
                    <h4 class="card-title"><strong>Book dit ophold</strong></h4>
                    <a href="/booking" class="btn btn-outline-primary px-3 mt-3 w-75">Gå til booking</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-between">
                    <h4 class="card-title"><strong>Login</strong></h4>
                    <a href="/register" class="btn btn-outline-secondary px-3 mt-3 w-75">Opret bruger</a>
                    <a href="/login" class="btn btn-outline-secondary px-3 mt-3 w-75">Log ind</a>
                </div>
            </div>
        </div> 

        <div class="col-md-4">
            <div class="card border-0 h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-between">
                    <h4 class="card-title"><strong>Praktiske oplysninger</strong></h4>
                        <a href="/camping" class="btn btn-outline-success px-3 mt-3 w-75">Kontakt & info</a>
                        <a href="/campingmap" class="btn btn-outline-success px-3 mt-3 w-75">Oversigt over campingpladsen</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .imgbtn{
        position: absolute; 
        height: 100%; 
        width: 6%; 
        color: #fff; 
        font-size: 70pt; 
        font-family: cursive
}
    .right-align{
        right: 0px;
    }

    .left-align{
        left: 0px;
    }
</style>

@code{
    private List<string> imgs = [
        "../img/COLOURBOX3663731.jpg", 
        "../img/COLOURBOX8622293.jpg",
        "../img/COLOURBOX17620185.jpg",
        "../img/COLOURBOX29034107.jpg"];

    private int ImgIndex = 0;
    private void ImgDecrement(){
        ImgIndex--;
        if(ImgIndex<0)
            ImgIndex = imgs.Count-1;
    }
    private void ImgIncrement(){
        ImgIndex++;
        if(ImgIndex>imgs.Count-1)
            ImgIndex = 0;
    }
}